<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Servicio de Neurologia{% endblock %}</title>
        
        
        {% block stylesheets %}
            <link href="{{asset('public/css/bootstrap.css')}}" rel="stylesheet">
            <link href="{{asset('public/css/jquery-ui-1.11.2.custom/jquery-ui.css')}}" rel="stylesheet">
        {%endblock stylesheets%}
        
        {%block javascripts %}
            <script src="{{asset('bundles/firstbundle/js/jquery.js')}}"></script>
            <script src="{{asset('bundles/firstbundle/js/bootstrap.js')}}"></script>
            <script src="{{ asset('public/js/tratamiento_interno.js') }}" type="text/javascript"></script>
        {%endblock javascripts%}
        
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    {% block menu %}
        
        {% if is_granted('ROLE_ADMIN')%}

            {% include 'NeurologiaUserBundle:Default:adminMenu.html.twig' %}

        {% elseif is_granted('ROLE_USER') %}

            {% include 'NeurologiaUserBundle:Default:userMenu.html.twig' %}

        {% endif %}
        {% include 'NeurologiaUserBundle:Default:adminMenu.html.twig' %}
    {% endblock %}

    {% block datosPaciente %}
        <h2>template base</h2>
    {% endblock %}

    {% block body %}
        <h2>body desde template base</h2>
    {% endblock %}

</body>
</html>
