<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Servicio de Neurologia{% endblock %}</title>
        
        
        {% block stylesheets %}
            <link href="{{asset('bundles/firstbundle/css/bootstrap.css')}}" rel="stylesheet">
            <link href="{{asset('bundles/firstbundle/css/bootstrap-responsive.css')}}" rel="stylesheet">
          <!--  <link href="{{asset('bundles/firstbundle/css/estilos.css')}}" rel="stylesheet"> -->
        {%endblock stylesheets%}
        
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    {% block menu %}
        
        {% if is_granted('ROLE_ADMIN')%}

            {% include 'NeurologiaUserBundle:Default:adminMenu.html.twig' %}

        {% elseif is_granted('ROLE_USER') %}

            {% include 'NeurologiaUserBundle:Default:userMenu.html.twig' %}

        {% endif %}
    {% endblock %}

    {% block datosPaciente %}
        <h2>template base</h2>
    {% endblock %}

    {% block body %}
        <h2>body desde template base</h2>
    {% endblock %}


        {%block javascripts %}
            <script src="{{asset('bundles/firstbundle/js/jquery.js')}}"></script>
            <script src="{{asset('bundles/firstbundle/js/bootstrap.js')}}"></script>
        {%endblock javascripts%}
</body>
</html>
