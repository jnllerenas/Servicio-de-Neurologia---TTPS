<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Persona" table="persona">
    <indexes>
      <index name="id_estado_civil" columns="id_estado_civil"/>
      <index name="id_tipo_documento" columns="id_tipo_documento"/>
      <index name="id_sexo" columns="id_sexo"/>
    </indexes>
    <id name="idPersona" type="integer" column="id_persona">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombre" type="string" column="nombre" length="255" nullable="true"/>
    <field name="apellido" type="string" column="apellido" length="255" nullable="true"/>
    <field name="numeroDocumento" type="string" column="numero_documento" length="255" nullable="true"/>
    <field name="telefono" type="string" column="telefono" length="255" nullable="true"/>
    <field name="email" type="string" column="email" length="255" nullable="true"/>
    <field name="fechaDeNacimiento" type="date" column="fecha_de_nacimiento" nullable="true"/>
    <field name="direccion" type="string" column="direccion" length="255" nullable="true"/>
    <many-to-one field="idTipoDocumento" target-entity="TipoDocumento">
      <join-columns>
        <join-column name="id_tipo_documento" referenced-column-name="id_tipo_documento"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idEstadoCivil" target-entity="EstadoCivil">
      <join-columns>
        <join-column name="id_estado_civil" referenced-column-name="id_estado_civil"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idSexo" target-entity="Sexo">
      <join-columns>
        <join-column name="id_sexo" referenced-column-name="id_sexo"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
