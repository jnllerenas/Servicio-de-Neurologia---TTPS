
    
<h1>Estudios </h1>
{% if estudios %}
<table class="table table-condensed table-hover">  
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Tipo Estudio</th>
            <th>Cantidad imagenes</th>
            <th>Acciones</th>
        </tr>
    </thead>    
    
{% for estudio in estudios %}
    <tr>
    <td>{{estudio.fecha|date('Y-m-d')}}</td>
    <td>{{estudio.getTipoEstudioSiglas}}</td>
    
    {% if estudio.imagenes %}
    
    <td>{{ estudio.imagenes|length }}</td>
    
    {% endif %}
    <td><a href="{{ path('neurologia_estudio_show', { 'id': estudio.id }) }}" class="">Ver</a></td>
    </tr>
{% endfor %}
{% else %}
    No se encontraron estudios para esta paciente.
{% endif %}
