{% block contenido %}
    <h3>Estudios > Listado > Detalle</h3>
    <table class="table table-hover">  

        <tr>
            <td>Fecha</td> <td>{{estudio.fecha|date('Y-m-d')}}</td>
        </tr>    
        <tr>
            <td>Descripcion</td><td>{{estudio.descripcion}}</td>
        </tr>
        <tr>
            <td>Institucion</td><td>{{estudio.institucion}}</td>
        </tr>
        <tr>
            <td>Tipo estudio</td><td>{{estudio.getTipoEstudioSiglas}}</td>
        </tr>
    </table>
    <table class = "table table-hover">

        {% if estudio.imagenes is not empty %}

            <tr>
                <td>Imagen/es</td><td></td>
            </tr>

            {% for imagen in estudio.imagenes %}
                <tr>
                    <td>{{imagen.descripcion}}</td> <td><a href="{{ asset(imagen.getWebPath)}}" target="_blank"/><img src='{{ asset(imagen.getWebPath)}}' height='100px'/><td>
                </tr>   
            {% endfor %}

        {% endif %}

    </table>





{% endblock %}
   <div>
		<input class="btn btn-primary" style="margin-top:10px" type="button" onclick=" window.history.back()" value='Volver' />
	</div>

