{% extends 'NeurologiaBusquedaBundle:Default:index.html.twig' %}

{% block menubusqueda %}
    
    <div class="panel panel-primary" style="margin: auto; width: 1000px;">

        <div class="panel-heading">
            <h3 class="panel-title">B&uacute;squeda avanzada de pacientes</h3>
        </div>
        <div class="panel-body">
            <div style="padding-bottom: 80px;">
            {{ form_start(form, {'method': 'GET'}) }}
                {{ form_errors(form) }}
                <div style="width:auto; float: left;">
                    <span class="label label-default">Categoria de diagn&oacute;stico</span><br>
                    {{ form_widget(form.categoriaDiagnostico,{ 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.categoriaDiagnostico) }}
                </div>
                <div style="width:auto; float: left;">
                    <span class="label label-default">Droga</span><br>
                    {{ form_widget(form.droga,{ 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.droga) }}
                </div>
                <div style="width:auto; float: left;">
                    <span class="label label-default">Efecto adverso</span><br>
                    {{ form_widget(form.efectoAdverso,{ 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.efectoAdverso) }}
                </div>
                <div style="width:auto; float: left;">
                    <span class="label label-default">Sexo</span><br>
                    {{ form_widget(form.sexo,{ 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.sexo) }}
                </div>
                <div style="width:auto; float: left;">
                    <span class="label label-default">Edad</span><br>
                    {{ form_widget(form.edad,{ 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.edad) }}
                </div>
                <div style="width:auto; float: right; margin-right: 30px; margin-top: 20px;">
                    {{ form_widget(form.search,{ 'attr': {'class': 'btn btn-primary'} }) }}
                    {{ form_widget(form.reset,{ 'attr': {'class': 'btn btn-primary'} }) }}
                </div>

            {{ form_end(form) }}
            </div>
        {% block mensaje %}
            <span>
                {% if valoreselegidos %}
                    {{ valoreselegidos }}
                {% endif %}
            </span>
        {% endblock %}
        
        {% block lista %}
            
                <table class="datatable_bootstrap table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Fecha de nacimiento</th>
                            <th>Sexo</th>
                            <th>Enfermedad Actual</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if lista %}
                            {% for tupla in lista %}
                                <tr>
                                   <td>{{ tupla.nombre }}</td>
                                   <td>{{ tupla.apellido }}</td>
                                   <td>{{ tupla.fechaNacimiento|date('d/m/Y') }}</td>
                                   <td>{{ tupla.sexo }}</td>
                                   <td>{{ tupla.enfermedad }}</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            
        {% endblock %}
        </div>
    </div>
            
{% endblock %}        