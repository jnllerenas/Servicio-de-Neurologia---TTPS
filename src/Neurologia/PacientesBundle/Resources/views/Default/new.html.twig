                        {{ form_widget(form.nivelEducacional, { 'attr': { 'style': 'float: left;' } }) }}
                    </div>
                    <br><br><br>
                    <div>
                        {{ form_label(form.ocupacion) }}
                        <br>
                        {{ form_widget(form.ocupacion, { 'attr': { 'style': 'float: left;' } }) }}
                    </div>
                    
                </div>

                <div style="width: 200px; float: left; margin: 25px;">

                    <div>
                        {{ form_label(form.obraSocial) }}
                        <br>
                        {{ form_widget(form.obraSocial, { 'attr': { 'style': 'float: left;' } }) }}
                    </div>
                    <br><br><br>
                    <div>
                        {{ form_label(form.numeroCarnet) }}
                        <br>
                        {{ form_widget(form.numeroCarnet, { 'attr': { 'style': 'float: left;' } }) }}
                    </div>
                    <br><br><br>
                    <div>
                        {{ form_label(form.otros) }}
                        <br>
                        {{ form_widget(form.otros, { 'attr': { 'style': 'float: left;width: 180px; height: 115px;' } }) }}
                    </div>

                </div>
                <div style="float: right; margin-top: 20px;">
                     {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-primary'} }) }}
                     <a class="btn btn-primary" href="{{- path('neurologia_busqueda_paciente') -}}">
                         Volver
                     </a>
                 </div>
                         
            </div>
            
        {{ form_end(form) }}
    </div>    
</div>
        
{% endblock %}
