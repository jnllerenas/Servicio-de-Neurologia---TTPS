{% extends '::base.html.twig' %}

{% block body -%}

<div class="panel panel-primary" style="margin: auto; width: 1200px;">

    <div class="panel-heading">
        <h3 class="panel-title">Registro de pacientes</h3>
    </div>
    <div class="panel-body">
        {{ form_start(form, {'action': path('paciente_create'), 'method': 'POST'}) }}

            {{ form_errors(form) }}
            <div>
                <div style="width: 250px; float: left; margin: 25px;">
                    <div>
                        {{ form_label(form.nombre) }}
                        <br>
                        {{ form_widget(form.nombre, { 'attr': { 'style': 'float: left;' } }) }}
                    </div>
                    <br><br><br>
                    <div>
                        {{ form_label(form.apellido) }}
                        <br>
                        {{ form_widget(form.apellido, { 'attr': { 'style': 'float: left;' } }) }}
                    </div>
                    <br><br><br>
                    <div>
                        {{ form_label(form.sexo) }}
                        <br>
                        {{ form_widget(form.sexo, { 'attr': { 'style': 'float: left;' } }) }}
                    </div>
                    <br><br><br>
                    <div>
                        {{ form_label(form.tipoDocumento) }}
                        <br>
                        {{ form_widget(form.tipoDocumento, { 'attr': { 'style': 'float: left;' } }) }}
                    </div>

                </div>
                    
                <div style="width: 250px; float: left; margin: 25px;">
                    <div>
                        {{ form_label(form.documento) }}
                        <br>
                        {{ form_widget(form.documento, { 'attr': { 'style': 'float: left;' } }) }}
                    </div>
                    <br><br><br>
