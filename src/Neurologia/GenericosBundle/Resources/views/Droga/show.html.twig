{% extends 'NeurologiaGenericosBundle:Default:abm.html.twig' %}

{% block container %}
	<div align="center" style="text-align:center">
		<h1>Detalle Droga</h1>

		<div class="table-responsive">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ entity.id }}</td>
				</tr>
				<tr>
					<th>Descripcion</th>
					<td>{{ entity.descripcion }}</td>
				</tr>
			</tbody>
		</table>
		</div>

		<a style="margin-bottom: 20px;" class="btn btn-primary" href="{{ path('droga_edit', { 'id': entity.id }) }}">
            Editar
        </a>

		{{ form(delete_form) }}
		
		<a class="btn btn-primary" href="{{ path('droga') }}">
            Volver
        </a>
		
	</div>
{% endblock %}
