{% block contenido %}

    <script src="{{ asset('public/js/lib/jquery.dataTables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/lib/dataTables.bootstrap.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/evolucion.js') }}" type="text/javascript"></script>
    <link href="{{asset('public/css/dataTables.bootstrap.css')}}" rel="stylesheet">        

    {% if evoluciones is not empty %}

        {% for flashMessage in app.session.flashbag.get('mensaje') %}
            <div class="alert alert-success" role="alert" style="display:block">
                {{ flashMessage }}
            </div>

        {% endfor %}

        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Evoluci&oacute;n</div>

            <!-- Table -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Descripci&oacute;n</th>                        
                        <th>Autor</th>
                        <th>Acciones</th>
                        <!--<th>Activo</th>
                        <th>Medicamentos</th>
                        <th>Efectos adversos</th>
                        <th>Detalle</th>-->
                    </tr>
                </thead>
                <tbody>

                    {% for e in evoluciones %}
                        <tr>
                            <td>{{ e.fechaHora|date('d-m-Y H:i:s') }}</td>
                            <td>{{ e.evolucion }}</td>
                            <td>{{ e.usuario }}</td>
                            <td><a href="{{ url('neurologia_historia_clinica_homepage', {'accion':'evolucion_modificar', 'id':e.id , 'tab':'Evolucion'}) }}">Editar</a><a href="{{ url('neurologia_historia_clinica_homepage', {'accion':'evolucion_modificar','id':e.id, 'tab':'Evolucion'}) }}"> Ver</a>
</td>
                            <!--<tr>t.activo</tr>
                            <tr>t.con_medicamentos</tr>
                            <tr>t.con_efectos_adversos</tr>
                            <tr>detalle</tr>-->
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    {% else %}

        <label> No existen evoluciones para el paciente seleccionado. </label>

    {% endif %}    

    <a href="{{ url('neurologia_historia_clinica_homepage', {'accion':'evolucion_nuevo', 'tab':'Evolucion'}) }}">Agregar evoluci&oacute;n</a>
{% endblock %}