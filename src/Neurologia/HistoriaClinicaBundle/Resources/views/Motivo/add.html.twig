{% block contenido %}
<div class="panel panel-primary" style="margin: auto; margin-top:15px; margin-bottom:15px; width: 650px;">

    <div class="panel-heading">
        <h3 class="panel-title">Agregar un Motivo</h3>
    </div>
    <div class="panel-body">
{{ form_start(motivo) }}
    <div style="width: 250px; float: left; margin: 25px;">
    {{ form_row(motivo.detalle, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div style="float: right; margin-top: 20px;">
    {{ form_row(motivo.enviar, { 'attr': {'class': 'btn btn-primary'} }) }}  
    <button type="button" class="btn btn-primary" onclick="history.back();">Volver</button>
    </div>
    
{{ form_end(motivo) }}

    </div>
</div>
    
{% endblock %}
