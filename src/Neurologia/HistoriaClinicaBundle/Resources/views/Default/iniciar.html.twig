{% extends '::base.html.twig' %}

{% block body %}
<div class="panel panel-primary" style="margin: auto; width: 450px; margin-top: 20px;">

    <div class="panel-heading">
        <h3 class="panel-title">Iniciar Historia Cl√≠nica</h3>
    </div>
    <div class="panel-body">
    {{ form_start(iniciar) }}
        <div style="width: 350px; float: left; margin: 25px;">
            {{ form_label(iniciar.derivado) }}
            {{ form_widget(iniciar.derivado, { 'attr': {'class': 'form-control','style':'float:right;width:240px;'} }) }}
        </div>
        <div style="width: 350px; float: left; margin: 25px; clear: both;">
            {{ form_label(iniciar.motivo) }}
            {{ form_widget(iniciar.motivo, { 'attr': {'class': 'form-control','style':'float:right;width:275px;'} }) }}
        </div>
        <div style="width: 350px; float: left; margin: 25px; clear: both;">
            {{ form_label(iniciar.enfermedad) }}
            {{ form_widget(iniciar.enfermedad, { 'attr': {'class': 'form-control','style':'float:right;'} }) }}
        </div>
        <div style="float: right; margin-top: 20px;">
            {{ form_widget(iniciar.enviar, { 'attr': {'class': 'btn btn-primary'} }) }}   
            <input class="btn btn-primary" type="button" onclick=" window.history.back()" value='Volver' />
        </div>
    {{ form_end(iniciar) }}
    </div>
</div>
