{% extends '::base.html.twig' %}

{% block javascripts %}

    {{ parent() }}

    
    <script src="{{ asset('public/js/lib/jquery-1.11.1.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/lib/jquery.dataTables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/lib/dataTables.bootstrap.js') }}" type="text/javascript"></script>
    <script src="{{ asset('public/js/tratamiento.js') }}" type="text/javascript"></script>

{% endblock %}

{% block stylesheets %}

    {{ parent() }}

    <link href="{{asset('public/css/dataTables.bootstrap.css')}}" rel="stylesheet">
    
{% endblock %}

{% block body %}

    {% if tratamientos is not empty %}
        
        {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-success" role="alert" style="display:block">
            {{ flashMessage }}
        </div>
            
        {% endfor %}
        
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Tratamientos</div>

            <!-- Table -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <!--<th>Tipo</th>-->
                        <th>Descripci&oacute;n</th>
                        <!--<th>Activo</th>
                        <th>Medicamentos</th>
                        <th>Efectos adversos</th>
                        <th>Detalle</th>-->
                    </tr>
                </thead>
                <tbody>
                    
                    {% for t in tratamientos %}
                        <tr>
                            <td>{{ t.fecha_tratamiento|date('d-m-Y H:i:s') }}</td>
                            <!--<tr>t.tipo_tratamiento</tr>-->
                            <td>{{ t.descripcion }}</td>
                            <!--<tr>t.activo</tr>
                            <tr>t.con_medicamentos</tr>
                            <tr>t.con_efectos_adversos</tr>
                            <tr>detalle</tr>-->
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
              
    {% else %}
        
        <label> No existen tratamientos para el paciente seleccionado. </label>
        
    {% endif %}
    
{% endblock %}